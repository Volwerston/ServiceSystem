
@{
    ViewBag.Title = "ConsultantSearch";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1">
        <div class="row">
            <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                <div class="form-horizontal well" style="display: table;">
                    <div class="form-group">
                        <input name="name" placeholder="Ім'я користувача" class="form-control" style="margin: auto;" />
                    </div>
                    <div class="form-group">
                        <input name="organisation" placeholder="Організація" class="form-control" style="margin: auto;" />
                    </div>
                    <input class="btn btn-success btn-block" id="searchButton" style="margin: auto;" value="Шукати" />
                </div>
            </div>
            <div class="col-xs-8 col-sm-8 col-lg-8 col-md-8" id="servicesData">
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">

        var lastId = 0;

        var tempName = null;
        var tempOrganisation = null;


        function getDivForConsultant(consultant)
        {
            return '<div class="row text-center" style="margin-bottom: 10px;" id="consultant_' + consultant.Id + '">'
            + '<div style="border: 2px solid green; border-radius: 7px; min-height: 200px;" class="col-xs-10 col-sm-10 col-md-10 col-lg-10 col-md-offset-1 col-lg-offset-1">'
            + '<h3>' + consultant.Surname + ' ' + consultant.Name + ' ' + consultant.FatherName + '</h3>'
            + '<p class="text-center">' + consultant.Email + '</p>'
            + '<p class="text-center">' + consultant.Organisation + '</p>'
            + '<div class="row">'
            + '<div class="col-xs-4 col-sm-offset-4">'
            + '<input type="button" class="btn btn-success btn-block" name="invite_' + consultant.Id + '" value="Запросити">'
            + '</div>'
            + '</div>'
            + '</div>'
            + '</div>';
        }

        $(document).ready(function () {
            
            $(document).scroll(function () {
                if ($(document).height() - ($(window).height() + $(window).scrollTop()) < 50) {

                    var toPass = {
                        Name: tempName,
                        Organisation: tempOrganisation,
                        LastID: lastId,
                        ServiceId: '@ViewData["ServiceId"].ToString()'
                    };

                    $.ajax({
                        type: "POST",
                        url: "/api/ServiceConsultants/PostConsultantParams",
                        dataType: "json",
                        headers: {
                           Authorization: 'Bearer ' + localStorage.getItem("access_token")
                        },
                        data: JSON.stringify(toPass),
                        contentType: "application/json; charset=utf-8",
                        async: false,
                        success: function (res) {

                            var toProceed = JSON.parse(res);

                            if (toProceed != null) {

                                for (var i = 0; i < toProceed.length; ++i) {
                                    $("#servicesData").append(getDivForConsultant(toProceed[i]));
                                }

                                $('input[name^="invite"]').click(function () {

                                    var id = $(this).attr("name").split('_')[1];

                                    $.ajax({
                                        method: "POST",
                                        url: "/api/ServiceConsultants/AddConsultant",
                                        contentType: "application/json; charset=utf-8",
                                        dataType: "json",
                                        data: JSON.stringify({Id: id, ServiceId: @ViewData["ServiceId"]}),
                                        success: function(res){
                                            alert(res);
                                        },
                                        error: function(res){
                                            alert(res.responseText);
                                        }
                                    });
                                });

                                lastId += toProceed.length;
                            }
                            else {

                                if ($("#servicesData").children().length == 0) {
                                    $("#servicesData").append('<div class="text-center">Користувачів не знайдено</div>');
                                }
                            }
                        },
                        error: function (xhr, error, message) {
                            alert(message);
                        }
                    });
                }
            });

            $("#searchButton").click(function () {

                $("#servicesData").empty();
                lastId = 0;

                tempName = $('input[name="name"]').val();
                tempOrganisation = $('input[name="organisation"]').val();

                var toPass = {
                    Name: tempName,
                    Organisation: tempOrganisation,
                    LastID: lastId,
                    ServiceId: '@ViewData["ServiceId"].ToString()'
                };

                $.ajax({
                    type: "POST",
                    url: "/api/ServiceConsultants/PostConsultantParams",
                    dataType: "json",
                    headers: {
                        Authorization: 'Bearer ' + localStorage.getItem("access_token")
                    },
                    data: JSON.stringify(toPass),
                    contentType: "application/json; charset=utf-8",
                    success: function(res)
                    {

                        var toProceed = JSON.parse(res);

                        if(toProceed != null)
                        {
                            for (var i = 0; i < toProceed.length; ++i) {
                                $("#servicesData").append(getDivForConsultant(toProceed[i]));
                            }
                            $('input[name^="invite"]').click(function () {
                                var id = $(this).attr("name").split('_')[1];

                                $.ajax({
                                    method: "POST",
                                    url: "/api/ServiceConsultants/AddConsultant",
                                    contentType: "application/json; charset=utf-8",
                                    dataType: "json",
                                    data: JSON.stringify({Id: id, ServiceId: @ViewData["ServiceId"]}),
                                    success: function(res){
                                        $("#consultant_" + id).remove();
                                        alert('User successfully invited');
                                    },
                                    error: function(res){
                                        alert(res.responseText);
                                    }
                                });
                            });

                            lastId += toProceed.length;
                        }
                        else {
                            if ($("#servicesData").children().length == 0) {
                                $("#servicesData").append('<div class="text-center">Користувачів не знайдено</div>');
                            }
                        }
                    },
                    error: function(res)
                    {
                        alert(res.status);
                    }
                });
            });

        });
    </script>
}