<div class="form-group">
    <input type="hidden" value="Deadline" name="applicationType" />
    <div class="text-center">
        <label class="control-label">Оберіть тип дедлайну:</label>
    </div>
    <div class="form-group" style="margin-top: 10px; margin-left: 50px;">
            <p><input type="radio" name="deadline_type" value="by_last_date" /> До конкретного дня </p>
            <p><input type="radio" checked name="deadline_type" value="from_some_date" /> Певний проміжок часу від конкретного дня </p>
        <label for="deadline_type" class="text-danger control-label" hidden id="deadline_type_validation"></label>
    </div>
</div>

<div id="by_last_date" hidden class="text-center">
    <label class="control-label">Оберіть день:</label>
    <div class="form-group">
        <input type="date" style="margin: auto;" class="form-control" name="deadline_last_date" />
        <label for="deadline_last_date" class="text-danger control-label col-sm-offset-2" hidden id="deadline_last_date_validation"></label>
    </div>
    <label class="control-label">Оберіть час:</label>
    <div class="form-group">
        <input type="time" style="margin: auto;" class="form-control" name="deadline_last_time" />
        <label for="deadline_last_time" class="text-danger control-label" hidden id="deadline_last_time_validation"></label>
    </div>
</div>

<div id="from_some_date" hidden class="text-center">
    <div class="form-group">
        <label class="control-label">Оберіть день:</label>
        <input type="date" style="margin: auto;" class="form-control" name="deadline_start_date" />
        <label for="deadline_start_date" class="text-danger control-label" hidden id="deadline_start_date_validation"></label>
    </div>
    <div class="form-group">
        <label class="control-label">Оберіть час:</label>
        <input type="time" style="margin: auto;" class="form-control" name="deadline_start_time" />
        <label for="deadline_start_time" class="text-danger control-label" hidden id="deadline_start_time_validation"></label>
    </div>
    <label class="control-label">Проміжок часу:</label>
    <div class="form-group">
        <input name="deadline_duration" type="number" class="col-md-offset-3 col-xs-2" />
        <select name="deadline_duration_measure" class="col-xs-3" id="timeType">
            <option value="minutes">хвилин</option>
            <option value="hours">годин</option>
            <option value="days">днів</option>
            <option value="weeks">тижнів</option>
            <option value="years">років</option>
        </select>
    </div>
    <label for="deadline_duration" style="margin-bottom:10px" class="text-danger control-label" hidden id="deadline_duration_validation"></label>
</div>